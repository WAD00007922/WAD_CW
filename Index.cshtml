
@{
    ViewData["Title"] = "Index";
}

<div ng-app="CarRental">
    <div ng-view></div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular.min.js" type="text/javascript"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.8.2/angular-route.min.js" type="text/javascript"></script>
<script type="text/javascript">
    angular
        .module('CarRental', ['ngRoute'])
        .config(function ($routeProvider) {
            $routeProvider                            //Routing//
                .when('/',
                {
                    templateUrl: 'pages/index.html',
                    controller: 'IndexController'
                })
                .when('/clients',
                {
                    templateUrl: 'pages/clients.html',
                    controller: 'ClientsController'
                })
                .when('/addClient',
                {
                    templateUrl: 'pages/addEditClient.html',
                    controller: 'AddClientController'
                })
                .when('/editClient/:clientId',
                {
                    templateUrl: 'pages/addEditClient.html',
                    controller: 'EditClientController'
                })
                .when('/cars',
                {
                    templateUrl: 'pages/cars.html',
                    controller: 'CarsController'
                })
                .when('/addCar',
                {
                    templateUrl: 'pages/addEditCar.html',
                    controller: 'AddCarController'
                })
                .when('/editCar/:carId',
                {
                    templateUrl: 'pages/addEditCar.html',
                    controller: 'EditCarController'
                })
                .otherwise({
                    redirectTo: '/'
                });
        })
        //Setting the modules that will be used for the controllers and functions for the logic of the controllers //
        .controller('IndexController', ['$scope', '$http', function ($scope, $http) {
            $scope.message = 'Car Rental';
        }])
        .controller('ClientsController', ['$scope', '$http', function ($scope, $http) {
            $scope.clients = [];
            $http.get('@Url.Action("GetClients", "Clients")')
                .then(function (response) {          //Get request for the method//
                    $scope.clients = response.data;
                });
             $scope.Delete = function (client) {
                $http.delete("@Url.Action("GetClients", "Clients")/" + client.id).then(function (response){
                    var index = $scope.clients.indexOf(client);
                    $scope.clients.splice(index, 1);
                });
            }
        }])
            .controller('CarsController', ['$scope', '$http', function ($scope, $http) {
            $scope.cars = [];
            $http.get('@Url.Action("GetCars", "Cars")')
                .then(function (response) {          //Get request for the method//
                    $scope.cars = response.data;
                });

            $scope.Delete = function (car) {
                $http.delete("@Url.Action("GetCars", "Cars")/" + car.id).then(function (response){
                    var index = $scope.cars.indexOf(car);
                    $scope.cars.splice(index, 1);
                });
            }
        }])
        .controller('AddClientController', ['$scope', '$http', '$location', function ($scope, $http, $location) { //for adding a new client//
                $scope.client =
                {
                    id : 0,
                    firstName : '',
                    lastName : '',
                    dateOfBirth : '',
                    gender : '',
                    email : '',
                    phone : '',
                    addressLine1 : '',
                    addressLine2 : '',
                    carId : '',
                    drivingLicenseNo : '',

            };

            $scope.SaveClient = function()
            {
                $http.post('@Url.Action("PostClient", "Clients")', $scope.client)
                    .then(function (response) {
                        $location.path('/clients');
                    })
            }

        }])
        .controller('AddCarController', ['$scope', '$http', '$location', function ($scope, $http, $location) { //for adding a new car//
            $scope.car =
            {
                id : 0,
                type : '',
                name : ''

            };

            $scope.SaveCar = function()
            {
                $http.post('@Url.Action("PostCar", "Cars")', $scope.car)
                    .then(function (response) {
                        $location.path('/cars');
                    })
            }

        }])
        .controller('EditCarController', ['$scope', '$http', '$location', '$routeParams', function ($scope, $http, $location, $routeParams) { //for editing car info //
            $scope.car =
            {
                id : 0,
                type : '',
                name : ''

            };

            $http.get('@Url.Action("GetCars", "Cars")/' + $routeParams.carId)
                .then(function (response) {
                    $scope.car = response.data;
                });

            $scope.SaveCar = function()
            {
                $http.put('@Url.Action("GetCars", "Cars")/' + $routeParams.carId, $scope.car)
                    .then(function (response) {
                        $location.path('/cars');
                    });
            }

        }])
        .controller('EditClientController', ['$scope', '$http', '$location', '$routeParams', function ($scope, $http, $location, $routeParams) {//for editing client info //
            $scope.client =
            {
                id : 0,
                firstName : '',
                lastName : '',
                dateOfBirth : '',
                gender : '',
                email : '',
                phone : '',
                addressLine1 : '',
                addressLine2 : '',
                carId : '',
                drivingLicenseNo : '',

            };

            $http.get('@Url.Action("GetClients", "Clients")/' + $routeParams.clientId)
                .then(function (response) {
                    $scope.client = response.data;
                });

            $scope.SaveClient = function()
            {
                $http.put('@Url.Action("GetClients", "Clients")/' + $routeParams.clientId, $scope.client)
                    .then(function (response) {
                        $location.path('/clients');
                    });
            }

        }]);


</script>


